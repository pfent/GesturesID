<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fent.de.tum.in.gesturesid.MeasurementActivity"
    tools:deviceIds="wear">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            app:layout_box="all" />

        <android.support.wearable.view.CircularButton
            android:id="@+id/button"
            android:layout_width="@dimen/close_button_diameter"
            android:layout_height="@dimen/close_button_diameter"
            android:layout_below="@id/text"
            android:onClick="onButtonClick" />
    </RelativeLayout>


</android.support.wearable.view.BoxInsetLayout>
